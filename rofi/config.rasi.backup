configuration {
    show-icons: true;
    disable-history: true;
    display-drun: "";
    display-window: "";
    modi: "drun,window";
}

* {
    background-color: rgba(0, 0, 0, 0);
    color: #fff;

    primary1: #2c3e50;
    primary1-transparent: rgba(44, 62, 80, 0.92);
    secondary1: #405469;

    primary2: #c0392b;
    secondary2: #e74c3c;

    primary3: #2980b9;
    secondary3: #3498db;
}

window {
    background-color: @primary1-transparent;
    opacity: 0.8;
    padding: 16px 16px;
}

element {
    orientation: horizontal;
    padding: 4px;
}

element selected {
    background-color: @secondary1;
}

prompt {
    color: @secondary3;
}

inputbar {
    border: 0 0 2px 0;
    border-color: @primary2;
    padding: 0 0 4px 0;
    margin: 10px 0;
}

entry {
    padding: 0 10px;
}
